<section id="loginForm" class="loginMain">
        <i class="fas fa-times" onclick="closeLoginForm()"></i>
    <h2>Login</h2>
    <form  action="/login" method="post">
        
        <div>
            <label for="loginForm__username">Brugernavn</label>
            <input type="email" name="username" id="loginForm__username">
        </div>
        <div>
            <label for="loginForm__passphrase">Adgangskode</label>
            <input type="password" name="passphrase" id="loginForm__passphrase">
        </div>
        <button type="submit">Log ind</button>
    </form>
</section>